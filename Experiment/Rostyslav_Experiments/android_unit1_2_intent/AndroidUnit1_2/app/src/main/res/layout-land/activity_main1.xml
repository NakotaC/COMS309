<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Main1Activity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/avatar2"
            android:layout_width="80dp"
            android:layout_height="86dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/_289_skvnqsbgqu1pidewmjgtmti0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/avatar3"
            android:layout_width="88dp"
            android:layout_height="84dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="82dp"
            android:src="@drawable/vecteezy_avatar_bearded_man_10967316" />

        <TextView
            android:id="@+id/main_msg_txt"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="132dp"
            android:fontFamily="@font/aleo_light"
            android:text="Please select your avatar to continue"
            android:textColor="#3F51B5"
            android:textSize="30dp"
            android:typeface="monospace">

        </TextView>

        <Button
            android:id="@+id/main_join_btn"
            android:layout_width="113dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="join"
            android:textColor="#ffffff"
            android:textSize="20sp"></Button>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>